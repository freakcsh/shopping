<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.freak.shopping">
    <uses-sdk android:maxSdkVersion="26"
        android:minSdkVersion="16"
        />

    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PersonInformationActivity"/>
        <activity android:name=".activity.ShareActivity"/>
        <activity android:name=".activity.My_account_Activity"/>
        <activity android:name=".activity.My_Alter_Password_Activity"/>
        <activity android:name=".activity.My_Bill_Activity"/>
        <activity android:name=".activity.My_Coupon_Activity"/>
        <activity android:name=".activity.My_Forget_password_Activity"/>
        <activity android:name=".activity.My_Pay_Password_Activity"/>
        <activity android:name=".activity.My_Photo_Activity"/>
        <activity android:name=".activity.My_Bind_Account_Activity"/>
        <activity android:name=".activity.My_Collect_Activity"/>
        <activity android:name=".activity.login.LoginActivity"/>
        <activity android:name=".activity.login.RegisterActivity"/>
        <activity android:name=".activity.MyHomePageActivity"/>
        <activity android:name=".activity.My_CQC_Activity"/>
        <activity android:name=".activity.My_skill_activity"/>
        <activity android:name=".activity.My_Alter_information_Activity"/>
        <activity android:name=".activity.My_Setting_Activity"/>
        <activity android:name=".activity.official.OfficialActivityParticulars"/>
    </application>

</manifest>